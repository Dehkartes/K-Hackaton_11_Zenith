<Window x:Class="ACSClient.ToastMessage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ACSClient"
        mc:Ignorable="d"
        Title="ToastMessage" Height="50" Width="450" WindowStyle="None" ResizeMode="NoResize" Background="{x:Null}" AllowsTransparency="True" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" WindowStartupLocation="CenterOwner" >
    <!--회색의 모서리가 둥근 살짝 투명한 사각형의 토스트 디자인 xaml 코드-->
    <Grid>
        <Rectangle Height="50" Width="450" Fill="#3f3f3f" RadiusX="15" RadiusY="15" Opacity="0.6"/>
        <TextBlock Name="Message" Text="임시 메세지" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Window>
